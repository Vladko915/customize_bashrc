#usual aliases

alias cc="clear"
alias ccc="cmatrix"
alias ll="ls -lih"
alias wl="wc -l"
alias bashrc="mcedit ~/.bashrc"
alias tt='sl; sl --help; sl -a; sl -l; sl -F'
alias trcomma="tr -s ',' '\n'"
alias lsa="ls -a"

#set default editor
export EDITOR=/usr/bin/mcedit

#functions
mkcd ()
{
  mkdir -pv -- "$1" && cd -P -- "$1"
}
cdls ()
{
  cd  -- "$1";
  ls;
}
cdll ()
{
  cd  -- "$1";
  ll;
}

PS1="\n$PS1"